{
  "extra_exclude_directories": [
    "**/node_modules",
    ".git",
    "**/.git"
  ],
  "refactor_files": [
    {
      "filepatterns": ["*.py"],
      "replacers": [
        {
          "replacer": "RegexReplacer",
          "pattern": "from mylibrary\\.old_myfunctions",
          "replacement": "from mylibrary\\.new_myfunctions"
        },
        {
          "replacer": "RegexReplacer",
          "pattern": "my_old_module(\\.|\\/)",
          "replacement": "my_new_module\\1"
        }
      ]
    }
  ],
  "rename": [
    {
      "replacer": "RegexReplacer",
      "pattern": "^mymodule/my_old_module/oldfile.py$",
      "replacement": "mymodule/my_old_module/newfile.py"
    },
    {
      "replacer": "RegexReplacer",
      "pattern": "^mytemplates/my_old_module$",
      "replacement": "mytemplates/my_new_module"
    }
  ]
}
